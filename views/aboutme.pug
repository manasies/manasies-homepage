    script.
        let imgNumber = 1;
        let counter = 0;

        $(document).mousemove(function (e) {
            $("#iribg").css({ left: e.pageX +2, top: e.pageY + 2 });
            counter++;
            if (counter < 20)
                return;
            counter = 0;
            imgNumber = Math.floor(Math.random() * 10) + 1;
            $("#iribg").attr("src", 'assets/img/iribg' + imgNumber + '.jpeg');
            console.log (imgNumber);
        });
        $(window).scroll(function(e){
            $("#iribg").css({ left: e.pageX +2, top: e.pageY + 2 });
            counter++;
            if (counter < 20)
                return;
            counter = 0;
            imgNumber = Math.floor(Math.random() * 10) + 1;
